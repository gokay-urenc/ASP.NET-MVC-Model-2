<!-- Model yakalamanın 3. yolu için Views klasörü içerisindeki web.config dosyasına bakınız.-->
@model List<Category>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>KategorileriListele</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <table class="table table-dark table-hover">
        <tr>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>Detay</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/Home/KategorininUrunleri?KatID=@item.CategoryID">Ürünlerini Göster</a>
                </td>
            </tr>
        }
    </table>
</body>
</html>